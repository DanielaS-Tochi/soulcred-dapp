{
  "name": "soulcred-dapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Decentralized platform for issuing and managing Soulbound Tokens representing learning achievements",
  "author": "Daniela Silvana Tochi",
  "license": "MIT",
  "homepage": "https://soulcred-dapp.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielas-tochi/soulcred-dapp.git"
  },
  "bugs": {
    "url": "https://github.com/danielas-tochi/soulcred-dapp/issues"
  },
  "keywords": [
    "web3",
    "blockchain",
    "soulbound-tokens",
    "credentials",
    "education",
    "decentralized",
    "ethereum",
    "react",
    "typescript"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "echo \"Tests will be added in future versions\" && exit 0",
    "test:watch": "echo \"Tests will be added in future versions\" && exit 0",
    "test:coverage": "echo \"Tests will be added in future versions\" && exit 0",
    "deploy": "npm run build && npm run deploy:netlify",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "analyze": "npx vite-bundle-analyzer dist/stats.html",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "husky install || true",
    "postbuild": "echo 'Build completed successfully for SoulCred dApp'",
    "hardhat:install": "npm install --save-dev hardhat @nomicfoundation/hardhat-toolbox @openzeppelin/contracts",
    "hardhat:compile": "npx hardhat compile",
    "hardhat:deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "hardhat:deploy:mumbai": "npx hardhat run scripts/deploy.js --network mumbai",
    "hardhat:deploy:goerli": "npx hardhat run scripts/deploy.js --network goerli",
    "hardhat:verify": "npx hardhat run scripts/verify.js --network sepolia",
    "hardhat:test-contract": "npx hardhat run scripts/test-contract.js --network sepolia",
    "setup:hardhat": "npm run hardhat:install && npx hardhat compile"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^1.3.5",
    "@tanstack/react-query": "^4.36.1",
    "@wagmi/core": "^1.4.12",
    "axios": "^1.6.2",
    "ethers": "^5.7.2",
    "form-data": "^4.0.0",
    "lucide-react": "^0.344.0",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "recharts": "^2.8.0",
    "viem": "^1.19.9",
    "wagmi": "^1.4.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@openzeppelin/contracts": "^4.9.3",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.3.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "hardhat": "^2.17.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}